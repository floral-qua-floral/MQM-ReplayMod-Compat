{
	"schemaVersion": 1,
	"id": "mqm-replaymod",
	"version": "${version}",
	"name": "MQM ReplayMod",
	"description": "Improves compatibility between Mario qua Mario and ReplayMod, by allowing the recording player's action transitions to be recorded.",
	"authors": [
		"Floral qua Floral"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/mario-qua-mario",
		"sources": "https://github.com/floral-qua-floral/MQM-ReplayMod-Compat",
		"issues": "https://github.com/floral-qua-floral/MQM-ReplayMod-Compat/issues"
	},
	"license": "GPL-3.0-only",
	"icon": "assets/mqm-replaymod/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"com.fqf.mqm_replaymod.MQMReplayMod"
		]
	},
	"mixins": [
		"mqm-replaymod.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"mario_qua_mario": "*"
	}
}